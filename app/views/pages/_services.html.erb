<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">#Musk Tweets</h2>
        <h3 class="section-subheading text-muted">Real time news about Elon Musk from  <i class="fab fa-twitter fa-2x"></i></h3>
      </div>
    </div>
    <div class="row">
      <% @tweets.each do |tweet| %>
        <div class="col-md-4 col-sm-6 text-center">
          <div class="tech-news">
            <h4 class="service-heading"><%= "#{tweet.user.screen_name}"  %></h4>
            <p class="text-muted"><%= "#{tweet.user.screen_name}: #{tweet.text}" %>.</p>
          </div>
        </div>
      <% end  %>
    </div>
  </div>
</section>